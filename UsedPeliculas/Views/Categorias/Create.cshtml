@model UsedPeliculas.Models.Categoria
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Crear una categoria</h2>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="nombre">Nombre</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="serie">Serie</label>
                    </div>
                    <div class="col-8">
                        <input id="serie" type="text" asp-for="serie" class="form-control" readonly />
                        <span asp-validation-for="serie" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-check control">Crear Categoria</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger"> Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

